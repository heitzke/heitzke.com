- @title = "About - Mike Heitzke - UI/Web Designer"

!!! 5
%html{:class => "no-js", :lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}
    %title= @title
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}
    -# Mobile viewport optimized: j.mp/bplateviewport
    -# * disabled because I think the zoomed-in behavior on iOS sucks -- @nathos *
    %meta{:name =>"viewport", :content => "width=device-width,initial-scale=1"}
    %link{:href => 'http://fonts.googleapis.com/css?family=Ubuntu:300', :rel=> 'stylesheet'}
    %link{:rel => "stylesheet", :href => "/stylesheets/screen.css"}
    %script{:src => "/js/libs/modernizr-2.0.6.min.js"}
    %script{:src => "/js/libs/respond.min.js"}
  %body
    #top_bar
    %header
      .fixed_content
        %h1= @title
        .logo
          = link_to 'Mike Heitzke - UI Designer', '/'
        %nav
          %ul
            %li
              %a{:href => '/info.html'}
                Info
            %li
              %a{:href => '/words.html'}
                Words
            %li
              %a{:href => '/work.html'}
                Work
            %li.last
              %a{:href => '/contact.html'}
                Contact
    #main-content.fixed_content
      .fixed_content
        %h2= current_article.title
        .page_content
          = current_article.body
          %span.time
            Posted: 
            = current_article.date.strftime('%b %e %Y')
        #disqus_thread
        :javascript
          var disqus_shortname = 'heitzke'; // required: replace example with your forum shortname

          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        
    %footer
      = partial "footer"
