!!! 5
%html{:class => "no-js", :lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}
    %title= @title
    %meta{:name => "description", :content => "Mike Heitzke, Nashville based UI, UX, Interface designer and builder"}
    %meta{:name => "author", :content => "Mike Heitzke"}
    %meta{:name =>"viewport", :content => "width=device-width,initial-scale=1"}
    %link{:href => 'http://fonts.googleapis.com/css?family=Open+Sans:300,400', :rel=> 'stylesheet', :type => 'text/css'}
    %link{:rel => "stylesheet", :href => "/stylesheets/screen.css"}
  %body
    = partial 'header'
    %main.fixed-content{:role => 'main'}
      = yield
    = partial "footer"
    = partial "js_footer"

  :javascript
    window._gaq = [['_setAccount','UA-11264440-1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
