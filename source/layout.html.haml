!!! 5
%html{:class => "no-js", :lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}
    %title= @title
    %meta{:name => "description", :content => "Mike Heitzke, Birmingham based UI, UX, Interface designer"}
    %meta{:name => "author", :content => "Mike Heitzke"}
    %meta{:name =>"viewport", :content => "width=device-width,initial-scale=1"}
    %link{:href => 'http://fonts.googleapis.com/css?family=Ubuntu:300', :rel=> 'stylesheet'}
    %link{:rel => "stylesheet", :href => "/stylesheets/screen.css"}
  %body
    #top_bar
    = partial 'header'
    #main-content.fixed_content{:role => 'main'}
      = yield
    %footer{:role => 'contentinfo'}
      = partial "js_footer"
      = partial "footer"
  :javascript
    window._gaq = [['_setAccount','UA-11264440-1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
