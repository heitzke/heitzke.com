- @title = "Words - Mike Heitzke - UI/Web Designer"

.fixed_content
  %h2 Words
  .blog_post_list
    - blog.articles[0...10].each do |article| 
      .blog_post
        %h4
          = link_to article.title, article.url
        %p= article.summary
        = link_to 'read more', article.url
  .tags
    - blog.tags.each do |tag, articles|
      %a{ :href => "#{tag_path tag}", :class => 'tag'}
        = tag